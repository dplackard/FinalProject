@model FinalProject.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Email Confirmation";
}
<section id="page-title-area" class="section-padding overlay" style="background-image: url(/Content/assets/img/page-title.jpg)">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>@ViewBag.Title</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Thanks for contacting us! We will reply to your email within 48 hours.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<div>
    <dl class="dl-horizontal">
        <dt class="text-center">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="text-center">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="text-center">
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd class="text-center">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="text-center">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>

        <dd class="text-center">
            @Html.DisplayFor(model => model.Subject)
        </dd>

        <dt class="text-center">
            @Html.DisplayNameFor(model => model.Message)
        </dt>

        <dd class="text-center">
            @Html.DisplayFor(model => model.Message)
        </dd>

    </dl>
</div>

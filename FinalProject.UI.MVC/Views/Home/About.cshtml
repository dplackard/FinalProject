@{
    ViewBag.Title = "About Us";
}
<section id="page-title-area" class="section-padding overlay" style="background-image: url(/Content/assets/img/page-title.jpg)">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>@ViewBag.Title</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>About Cardoor&copy; and our services.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== About Page Content Start ==-->
<section id="about-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Section Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>About us</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Cardoor&copy; was founded in 2010 by founder Ricky Bobby and co-founder Stacy Morgan. After Ricky's countless business trips, he figured there had to be an easier way to rent cars rather than using your typical renting agencies found at the airport. His envision was to utilize third-parties to list their vehicles on the site and charge a small fee for the customer to rent a fun and cool ride for special events/occurances at a cost much cheaper than all of the competitors.</p>
                </div>
            </div>
            <!-- Section Title End -->
        </div>

        <div class="row">
            <!-- About Content Start -->
            <div class="col-lg-6">
                <div class="display-table">
                    <div class="display-table-cell">
                        <div class="about-content">
                            <p>At Cardoor&copy; we believe in fun for all at a fair price. Our specialty is highly-modified vehicles and will match ANY competitors daily rate.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- About Content End -->
            <!-- About Video Start -->
            <div class="col-lg-6">
                <div class="about-image">
                    <img src="~/Content/assets/img/home-2-about.png" alt="Toyota Corolla">
                </div>
            </div>
            <!-- About Video End -->
        </div>

        <!-- About Fretutes Start -->
        <div class="about-feature-area">
            <div class="row">
                <!-- Single Fretutes Start -->
                <div class="col-lg-4">
                    <div class="about-feature-item">
                        <i class="fa fa-car"></i>
                        <h3>WE REPRESENT ALL MAKES</h3>
                        <p>Our third-party dealers and leasing companies represent every single car make and model in the business.</p>
                    </div>
                </div>
                <!-- Single Fretutes End -->
                <!-- Single Fretutes Start -->
                <div class="col-lg-4">
                    <div class="about-feature-item active">
                        <i class="fa fa-car"></i>
                        <h3>WE BEAT ANY COMPETITORS PRICE</h3>
                        <p>At Cardoor&copy; we pride ourselves on beating ANY competitors price with a 100% price match guarantee.</p>
                    </div>
                </div>
                <!-- Single Fretutes End -->
                <!-- Single Fretutes Start -->
                <div class="col-lg-4">
                    <div class="about-feature-item">
                        <i class="fa fa-car"></i>
                        <h3>WE REPRESENT ALL MODELS</h3>
                        <p>Our third-party dealers and leasing companies represent every single car make and model in the business.</p>
                    </div>
                </div>
                <!-- Single Fretutes End -->
            </div>
        </div>
        <!-- About Fretutes End -->
    </div>
</section>
